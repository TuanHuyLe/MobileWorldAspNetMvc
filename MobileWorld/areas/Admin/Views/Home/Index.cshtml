
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{Trang chủ}
@section jsFooter {
    <script src="~/Assets/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Assets/admin/js/demo/chart-area-demo1.js"></script>
    <script src="~/Assets/admin/js/demo/chart-bar-demos2.js"></script>
    <script src="~/Assets/admin/js/demo/chart-pie-demo3.js"></script>
}
<div class="row">
    <!-- Area Charts -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Biểu đồ doanh thu</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                </div>
                <hr>
            </div>
        </div>
    </div>

    <!-- Bar Chart -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Top 4 sản phẩm bán chạy nhất</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="myBarChart"></canvas>
                </div>
                <hr>
            </div>
        </div>
    </div>

    <!-- Donut Chart -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Số lượng bán theo loại sản phẩm</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4">
                    <canvas id="myPieChart"></canvas>
                </div>
                <div style="margin-top: 19px">
                    <span class="mobile">Điện thoại</span>
                    <span class="laptop">Laptop</span>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>
<!--Row-->
