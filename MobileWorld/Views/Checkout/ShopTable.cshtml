@model List<Model.Models.CartItem>

<table class="shop_table">
    <thead>
        <tr>
            <th class="product-name">Sản phẩm</th>
            <th class="product-total">Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="cart_item">
                <td class="product-name">
                    @item.catalog.name <strong class="product-quantity">× @item.quantity</strong>
                </td>
                <td class="product-total">
                    <span class="amount">@string.Format("{0:0,0 VNĐ}", (item.catalog.price * item.quantity))</span>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

        <tr class="order-total">
            <th>Tất cả</th>
            <td><strong><span class="amount">@string.Format("{0:0,0 VNĐ}",ViewBag.TotalCart)</span></strong> </td>
        </tr>

    </tfoot>
</table>

