<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mobile World - @ViewBag.Title</title>
    <link href="/Assets/admin/img/logo/logo.png" rel="icon">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/Assets/user/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Assets/user/css/font-awesome.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Assets/user/css/owl.carousel.css" />
    <link href="~/Assets/user/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Assets/user/css/responsive.css" />
    <link href="/Assets/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/admin/css/admin-ruang.min.css" rel="stylesheet" />
    <link href="~/Assets/user/css/metyle.css" rel="stylesheet" />
</head>
<body id="page-top">
    <div class="header-area">
        @RenderPage("_Header.cshtml")
    </div>
    <div class="slider-area">
        <!-- Slider -->
        @RenderSection("slide", required: false)
    </div>
    <!-- End slider area -->

    <div class="container">
        @RenderBody()
    </div>

    @RenderPage("_Footer.cshtml")

    <!-- End footer bottom area -->
    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <!-- Bootstrap JS form CDN -->
    <!--<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->
    <script src="~/Assets/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- jQuery sticky menu -->
    <script src="/Assets/user/js/owl.carousel.min.js"></script>
    <script src="/Assets/user/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="/Assets/user/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="/Assets/user/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="/Assets/user/js/bxslider.min.js"></script>
    <script type="text/javascript" src="/Assets/user/js/script.slider.js"></script>
    <script src="~/Assets/admin/js/ruang-admin.min.js"></script>
    <script src="~/Assets/user/js/myJs/ajaxlogin.js"></script>
    <script src="~/Assets/user/js/myJs/searchAjax.js"></script>
    @RenderSection("scriptFooter", required: false)
</body>
</html>
