@model List<Model.EF.Catalog>
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Sản phẩm mới nhất</h2>
                    <div class="product-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="@item.pictureuri" alt="" />
                                    <div class="product-hover">
                                        <a href="@Url.Action("AddItem", "cart", new { id = item.id })" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Mua</a>
                                        <a href="@Url.Action("index", "product", new { id = item.id })" class="view-details-link"><i class="fa fa-link"></i> Thông tin</a>
                                    </div>
                                </div>

                                <h2>
                                    <a href="@Url.Action("index", "product", new { id = item.id })">@item.name</a>
                                </h2>

                                <div class="product-carousel-price">
                                    <ins>@String.Format("{0:0,0 VNĐ}", item.price)</ins>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>